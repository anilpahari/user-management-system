<div class="row">
  <div class="col-6"><h1 >Users</h1></div>
  <div class="col-6 d-flex justify-content-end"><a href="/newUser" type="button" class="btn btn-primary align-self-center">+add Users</a></div>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">SN</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  

  <tbody>
    <% for(let i=0;i<rows.length;i++){%>
    <tr>
      <td scope="row"><%- i+1 %></td>
      <td><%- rows[i].first_name %></td>
      <td><%- rows[i].last_name %></td>
      <td><%- rows[i].email %></td>
      <td><%- rows[i].phone %></td>
      <td class="text-center">
        <a href="/viewUser/<%- rows[i].id %>" type="button" class="btn btn-light btn-small">
          <i class="bi bi-eye"></i>View
        </a>
        <a href="/editUser/<%- rows[i].id %>" type="button" class="btn btn-light btn-small">
          <i class="bi bi-pencil"></i>Edit
        </a>
       
        <a onclick="deleteMe('<%=rows[i].id %>')" href="/<%-rows[i].id%>" type="button" class="btn btn-light btn-small" >
          <i class="bi bi-person-x"></i>Delete
        </a>
       
      </td>
    </tr>
    <% } %>
  </tbody>
  
</table>
<script>
  function deleteMe() {
      const confirmed = confirm("Are you sure you want to delete?");
      if (confirmed) {
          alert("Item deleted successfully.");
          
      } else {
        event.preventDefault();
        alert("Item deletion canceled.");
      }
  }
</script>

